  "scripts": {
    "load-fixtures": "node ./scripts/loadFixtures",
    "backend-test": "jest",
    "backend-start": "node ./services/backend",
    "production:backend-start": "NODE_ENV=production pm2-runtime start ./services/backend",
    "frontend-start": "EXTEND_ESLINT=true REACT_APP_GIT_SHA=`git rev-parse --short HEAD` react-scripts start",
    "frontend-build": "NODE_ENV=production EXTEND_ESLINT=true PUBLIC_URL=https://wiregoose.com REACT_APP_GIT_SHA=`git rev-parse --short HEAD` react-scripts build",
    "deploy-frontend": "yarn frontend-build && rsync -av --exclude '*.map' ./build $DEPLOYER:/usr/src/wiregoose/",
    "image-proxy": "node ./services/proxy",
    "production:image-proxy": "NODE_ENV=production pm2-runtime start ./services/proxy",
    "crawl-feeds": "node ./services/crawler",
    "production:crawl-feeds": "NODE_ENV=production pm2-runtime start ./services/crawler",
    "ssr": "node ./services/ssr",
    "production:ssr": "NODE_ENV=production pm2-runtime start ./services/ssr"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
